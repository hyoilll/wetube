extends layouts/main

block content
    .form-container
        form(action=routes.edit_video(video.id), method="post")
            input(type="text",placeholder="Title", name="title", value=video.title)
            textarea(name="description", placeholder="Description")=video.description
            input(type="submit" value="Upload Video")
        a.form-container_link.form-container_link--delete(href=routes.delete_video(video.id)) Delete Video

